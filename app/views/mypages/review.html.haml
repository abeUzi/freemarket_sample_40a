- breadcrumb :mypage
.main-content
  = render 'modules/mypage-sidebar'

  .abeshi-right-content
    .abeshi-right-content__block
      %h4.abeshi-right-content__block__title.middle.bold.back-silver 評価一覧
      %ul.abeshi-right-content__block__tabs
        %li.active
          %h4
            = link_to "すべて", mypage_review_path,class:"middle-center bold"
        %li
          %h4
            = link_to "良い", mypage_good_path,class:"middle-center bold"
        %li
          %h4
            = link_to "普通", mypage_review_path,class:"middle-center bold"
        %li
          %h4
            = link_to "悪い", mypage_review_path,class:"middle-center bold"

      - if @rates.present?
        - @rates.each do |rate|
          %ul.abeshi-right-content__block__object
            = link_to item_path(rate.trade.item_id) do
              %li
                .abeshi-right-content__block__object__link-box
                  = image_tag "avatar.jpg", alt: "avatar",class: "abeshi-right-content__block--avatar"
                  .abeshi-right-content__block__object__link-box__body.line21
                    - if rate.rate == 1
                      %i.fas.fa-laugh.good
                    - elsif rate.rate == 2
                      %i.fas.fa-meh.normal
                    - elsif rate.rate == 3
                      %i.fas.fa-frown
                    - if rate.user_id == rate.trade.user_id
                      %p 購入者
                      %br
                      = rate.trade.buyer.nickname
                      %br
                      = rate.comment
                    - elsif rate.user_id == rate.trade.buyer_id
                      %p 出品者
                      %br
                      = rate.trade.user.nickname
                      %br
                      = rate.comment
                    .abeshi-right-content__block__object__link-box__body--time
                      %i.fa.fa-history
                      = rate.created_at.strftime("%Y年%m月%d日 %H:%M")
                  %i.fa.fa-angle-right.fa-2x
      - else
        .nothing_box
          .nothing_box_sub
            %a{href: "", class: "thin_mercari"}
              %img{src: "//www-mercari-jp.akamaized.net/assets/img/common/common/logo-gray.svg?819506670", class: "mercari_thin"}
          .nothing_box_text
            %p
              評価はまだありません
